{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Estimated Resident Population by Country of Birth (2024)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/kluk0007/Monash_FIT3179_Homework_Week_9/refs/heads/main/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/kluk0007/Monash_FIT3179_Homework_Week_9/refs/heads/main/data/estimated_resident_population_by_country_of_birth.csv"
        },
        "key": "Country",
        "fields": ["pop_2024_percent"]
      }
    },
    {"calculate": "datum.pop_2024_percent + 0", "as": "population_percentage"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "population_percentage",
      "type": "quantitative",
      "scale": {"type": "symlog", "constant": 0.3, "domain": [0, 100]}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "population_percentage", "type": "quantitative"}
    ]
  }
}
